 <div class="container">
        <h1>Booking Details</h1>
        <div class="card">
            <div class="card-body">
                <p class="card-text">Event: <%= @booking.event.name %></p>
                <p class="card-text">Your booking is confirmed. Thank you!</p>
                <p class="card-text">User: <%= current_user.email %></p>
                <p class="card-text"> Booking Starts <%= @booking.event.start_date %></p>
                <p class="card-text"> Booking End <%= @booking.event.end_date %></p>

                <button id="goBackButton" class="btn btn-primary btn-sm">Go Back to Home</button>
            </div>
        </div>
    </div>

<br>
<%= link_to 'See all my bookings', bookings_path %>
