<div class="container text-center py-5">
<h2 id="bookings-title" class="indx" style="text-align: center; margin-left: 4px; color: white;">My Events</h2>

  <div class="container py-5">
    <% @events.each do |event| %>
    <div class="card mt-4">
      <div class="row">
        <div class="col-md-6">
          <%= link_to event_path(event), class: "text-decoration-none" do %>
            <% if event.photos.attached? %>
              <%= cl_image_tag event.photos.first.key, width: 296, crop: :fill, class: "event-img img-fluid" %>
            <% end %>
          <% end %>
        </div>

        <div class="col-md-6">
          <div class="card-body custom-card-body">
            <p class="custom-card-title"><strong>Event: <%= event.name %></strong></p>
            <p class="custom-card-text">Price: Â£<%= event.price %></p>
           <p class="custom-card-text">Start Date: <%= event.start_date.strftime("%d-%m-%y") %></p>
            <p class="custom-card-text">End Date: <%= event.end_date.strftime("%d-%m-%y") %></p>
            <%= link_to "Edit", edit_event_path(event), class: "button-green" %>
            <%= link_to "Delete", event_path(event), class: "button-green",
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
 <div style="position: relative;"> <!-- Add a relative position container -->
 <div class="mt-4" style="position: absolute; bottom: 0; left: 0; margin: 10px;"> <!-- Adjust margin as needed -->
  <%= link_to "Back", events_path, class: "button-blue" %>
</div>

</div>



