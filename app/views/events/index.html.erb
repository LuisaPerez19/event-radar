<div>
  <h1 class="index">Events found for you!</h1>
</div>


<div class="container py-5">
  <div class="row">
    <% @events.each do |event|%>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <div class="bg-white rounded shadow h-100">
        <% if event.photos.attached? %>
          <%= cl_image_tag event.photos.first.key, class: "event-img img-fluid rounded-top" %>
        <% end %>
            <div class="p-3 rounded-bottom d-flex flex-column">
            <%= link_to event_path(event), class:"text-decoration-none" do %>
              <strong><%= event.name %></strong>
              <small class="text-muted">Â£<%= event.price %></small>
            </div>
            <% end %>
        </div>
      </div>
    <% end  %>
  </div>
</div>
